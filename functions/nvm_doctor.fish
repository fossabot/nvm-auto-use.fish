function nvm_doctor -d "Comprehensive diagnostic and debugging tool"
    set -l action $argv[1]

    switch $action
        case check
            _nvm_doctor_full_check
        case system
            _nvm_doctor_system_info
        case managers
            _nvm_doctor_check_managers
        case permissions
            _nvm_doctor_check_permissions
        case config
            _nvm_doctor_check_config
        case cache
            _nvm_doctor_check_cache
        case security
            _nvm_doctor_security_audit
        case performance
            _nvm_doctor_performance_check
        case fix
            _nvm_doctor_auto_fix $argv[2..-1]
        case '*'
            echo "Usage: nvm_doctor [check|system|managers|permissions|config|cache|security|performance|fix] [args...]"
            echo
            echo "Commands:"
            echo "  check        - Run comprehensive diagnostic check"
            echo "  system       - Show system information"
            echo "  managers     - Check version manager status"
            echo "  permissions  - Check file and directory permissions"
            echo "  config       - Validate configuration"
            echo "  cache        - Check cache status and health"
            echo "  security     - Run security audit"
            echo "  performance  - Analyze performance issues"
            echo "  fix          - Attempt to fix common issues"
            return 1
    end
end

function _nvm_doctor_full_check -d "Run comprehensive diagnostic check"
    echo "ü©∫ NVM Auto-Use Doctor - Comprehensive Check"
    echo "============================================="
    echo

    set -l issues 0

    # System check
    echo "üñ•Ô∏è  System Information"
    echo ---------------------
    _nvm_doctor_system_info
    echo

    # Manager check
    echo "üîß Version Manager Status"
    echo -------------------------
    _nvm_doctor_check_managers
    set issues (math "$issues + $status")
    echo

    # Configuration check
    echo "‚öôÔ∏è  Configuration Status"
    echo ------------------------
    _nvm_doctor_check_config
    set issues (math "$issues + $status")
    echo

    # Permissions check
    echo "üîê Permissions Check"
    echo -------------------
    _nvm_doctor_check_permissions
    set issues (math "$issues + $status")
    echo

    # Cache check
    echo "üóÑÔ∏è  Cache Status"
    echo ----------------
    _nvm_doctor_check_cache
    set issues (math "$issues + $status")
    echo

    # Security audit
    echo "üîí Security Audit"
    echo -----------------
    _nvm_doctor_security_audit
    set issues (math "$issues + $status")
    echo

    # Performance check
    echo "‚ö° Performance Analysis"
    echo ----------------------
    _nvm_doctor_performance_check
    set issues (math "$issues + $status")
    echo

    # Summary
    echo "üìã Diagnostic Summary"
    echo "====================="
    if test $issues -eq 0
        echo "‚úÖ All checks passed! Your nvm-auto-use setup is healthy."
    else
        echo "‚ö†Ô∏è  Found $issues issue(s) that may need attention."
        echo "üí° Run 'nvm_doctor fix' to attempt automatic fixes."
    end

    return $issues
end

function _nvm_doctor_system_info -d "Display system information"
    echo "OS: "(uname -s)" "(uname -r)
    echo "Architecture: "(uname -m)
    echo "Shell: $SHELL"
    echo "Fish version: "(fish --version)

    if command -q node
        echo "Node.js: "(node --version)
    else
        echo "Node.js: Not installed"
    end

    if command -q npm
        echo "npm: "(npm --version)
    else
        echo "npm: Not available"
    end

    echo "PATH entries: "(echo $PATH | string split ':' | wc -l)
    echo "Current directory: "(pwd)
end

function _nvm_doctor_check_managers -d "Check version manager availability and status"
    set -l issues 0
    set -l managers (nvm_compat_detect 2>/dev/null)

    if test -z "$managers"
        echo "‚ùå No Node.js version managers found"
        echo "   Install at least one: nvm, fnm, volta, or asdf"
        set issues (math "$issues + 1")
    else
        echo "‚úÖ Found managers: $managers"

        # Check each manager's status
        for manager in (echo $managers | string split ' ')
            echo "   üìã $manager status:"
            switch $manager
                case nvm
                    if test -f "$HOME/.nvm/nvm.sh"
                        echo "      ‚úÖ NVM script found"
                        if command -q nvm
                            echo "      ‚úÖ NVM command available"
                        else
                            echo "      ‚ö†Ô∏è  NVM not in PATH (normal for Fish)"
                        end
                    else
                        echo "      ‚ùå NVM installation not found"
                        set issues (math "$issues + 1")
                    end
                case fnm
                    if command -q fnm
                        echo "      ‚úÖ FNM available: "(fnm --version)
                    else
                        echo "      ‚ùå FNM not found in PATH"
                        set issues (math "$issues + 1")
                    end
                case volta
                    if command -q volta
                        echo "      ‚úÖ Volta available: "(volta --version)
                    else
                        echo "      ‚ùå Volta not found in PATH"
                        set issues (math "$issues + 1")
                    end
                case asdf
                    if command -q asdf
                        echo "      ‚úÖ asdf available: "(asdf --version)
                        if asdf plugin list | grep -q nodejs
                            echo "      ‚úÖ nodejs plugin installed"
                        else
                            echo "      ‚ùå nodejs plugin not installed"
                            set issues (math "$issues + 1")
                        end
                    else
                        echo "      ‚ùå asdf not found in PATH"
                        set issues (math "$issues + 1")
                    end
            end
        end
    end

    return $issues
end

function _nvm_doctor_check_permissions -d "Check file and directory permissions"
    set -l issues 0

    # Check Fish functions directory
    set -l functions_dir (dirname (status current-filename))
    if test -d "$functions_dir"
        echo "‚úÖ Functions directory accessible: $functions_dir"

        # Check individual function files
        for func_file in "$functions_dir"/nvm_*.fish
            if test -r "$func_file"
                echo "   ‚úÖ $(basename $func_file) readable"
            else
                echo "   ‚ùå $(basename $func_file) not readable"
                set issues (math "$issues + 1")
            end
        end
    else
        echo "‚ùå Functions directory not found"
        set issues (math "$issues + 1")
    end

    # Check cache directory permissions
    set -l cache_dir
    if set -q XDG_CACHE_HOME
        set cache_dir "$XDG_CACHE_HOME/nvm-auto-use"
    else
        set cache_dir "$HOME/.cache/nvm-auto-use"
    end

    if test -d "$cache_dir"
        if test -w "$cache_dir"
            echo "‚úÖ Cache directory writable: $cache_dir"
        else
            echo "‚ùå Cache directory not writable: $cache_dir"
            set issues (math "$issues + 1")
        end
    else
        echo "‚ÑπÔ∏è  Cache directory doesn't exist (will be created as needed)"
    end

    # Check current directory permissions for version files
    if test -r "."
        echo "‚úÖ Current directory readable"

        for version_file in .nvmrc .node-version .tool-versions package.json
            if test -f "$version_file"
                if test -r "$version_file"
                    echo "   ‚úÖ $version_file readable"
                else
                    echo "   ‚ùå $version_file not readable"
                    set issues (math "$issues + 1")
                end
            end
        end
    else
        echo "‚ùå Current directory not readable"
        set issues (math "$issues + 1")
    end

    return $issues
end

function _nvm_doctor_check_config -d "Validate configuration"
    set -l issues 0

    echo "Configuration variables:"

    # Check debounce setting
    set -l debounce (_nvm_auto_use_get_debounce 2>/dev/null)
    if test -n "$debounce"
        echo "   ‚úÖ Debounce: ${debounce}ms"
    else
        echo "   ‚ÑπÔ∏è  Debounce: Default (500ms)"
    end

    # Check excluded directories
    set -l excluded (_nvm_auto_use_get_excluded_dirs 2>/dev/null)
    echo "   ‚úÖ Excluded dirs: $excluded"

    # Check auto-install setting
    if set -q _nvm_auto_use_no_install
        echo "   ‚úÖ Auto-install: Disabled"
    else
        echo "   ‚úÖ Auto-install: Enabled"
    end

    # Check silent mode
    if set -q _nvm_auto_use_silent
        echo "   ‚úÖ Silent mode: Enabled"
    else
        echo "   ‚úÖ Silent mode: Disabled"
    end

    # Check preferred manager
    if set -q _nvm_auto_use_preferred_manager
        echo "   ‚úÖ Preferred manager: $_nvm_auto_use_preferred_manager"
    else
        echo "   ‚úÖ Preferred manager: Auto-detect"
    end

    # Validate security policies
    echo "Security policies:"
    nvm_security policy list 2>/dev/null || echo "   ‚ÑπÔ∏è  No security policies set"

    return $issues
end

function _nvm_doctor_check_cache -d "Check cache status and health"
    set -l issues 0

    # Get cache stats
    nvm_cache stats

    # Check for corrupted cache files
    set -l cache_dir
    if set -q XDG_CACHE_HOME
        set cache_dir "$XDG_CACHE_HOME/nvm-auto-use"
    else
        set cache_dir "$HOME/.cache/nvm-auto-use"
    end

    if test -d "$cache_dir"
        set -l cache_files (find "$cache_dir" -type f 2>/dev/null)

        for cache_file in $cache_files
            if test -s "$cache_file"
                echo "   ‚úÖ $(basename $cache_file) valid"
            else
                echo "   ‚ö†Ô∏è  $(basename $cache_file) empty (may be normal)"
            end
        end

        # Check for very old cache files
        set -l old_files (find "$cache_dir" -type f -mtime +7 2>/dev/null)
        if test -n "$old_files"
            echo "   ‚ÑπÔ∏è  Found "(echo "$old_files" | wc -l)" cache files older than 7 days"
        end
    else
        echo "   ‚ÑπÔ∏è  No cache directory found"
    end

    return $issues
end

function _nvm_doctor_security_audit -d "Run security audit"
    nvm_security audit
end

function _nvm_doctor_performance_check -d "Analyze performance issues"
    set -l issues 0

    echo "Performance analysis:"

    # Check for excessive cache files
    set -l cache_dir
    if set -q XDG_CACHE_HOME
        set cache_dir "$XDG_CACHE_HOME/nvm-auto-use"
    else
        set cache_dir "$HOME/.cache/nvm-auto-use"
    end

    if test -d "$cache_dir"
        set -l cache_count (find "$cache_dir" -type f 2>/dev/null | wc -l)
        if test $cache_count -gt 100
            echo "   ‚ö†Ô∏è  Large number of cache files ($cache_count) - consider cleanup"
            set issues (math "$issues + 1")
        else
            echo "   ‚úÖ Reasonable cache size ($cache_count files)"
        end
    end

    # Check for very long directory paths
    set -l current_path (pwd)
    set -l path_length (string length "$current_path")
    if test $path_length -gt 200
        echo "   ‚ö†Ô∏è  Very long current path may slow operations: $path_length characters"
        set issues (math "$issues + 1")
    else
        echo "   ‚úÖ Path length reasonable: $path_length characters"
    end

    # Check for deep directory nesting
    set -l depth (echo "$current_path" | string replace -a '/' '\n' | wc -l)
    if test $depth -gt 15
        echo "   ‚ö†Ô∏è  Deep directory nesting may slow file searches: $depth levels"
        set issues (math "$issues + 1")
    else
        echo "   ‚úÖ Directory depth reasonable: $depth levels"
    end

    return $issues
end

function _nvm_doctor_auto_fix -d "Attempt to fix common issues"
    set -l fix_type $argv[1]

    echo "üîß Attempting automatic fixes..."

    switch $fix_type
        case cache
            echo "Cleaning up cache..."
            nvm_cache clear
            echo "‚úÖ Cache cleared"

        case permissions
            echo "Fixing cache directory permissions..."
            set -l cache_dir
            if set -q XDG_CACHE_HOME
                set cache_dir "$XDG_CACHE_HOME/nvm-auto-use"
            else
                set cache_dir "$HOME/.cache/nvm-auto-use"
            end

            mkdir -p "$cache_dir" 2>/dev/null
            chmod 755 "$cache_dir" 2>/dev/null
            echo "‚úÖ Cache directory permissions fixed"

        case config
            echo "Resetting configuration to defaults..."
            nvm_auto_use_config reset
            echo "‚úÖ Configuration reset"

        case all
            echo "Running all available fixes..."
            _nvm_doctor_auto_fix cache
            _nvm_doctor_auto_fix permissions
            echo "‚úÖ All fixes completed"

        case '*'
            echo "Available fix types:"
            echo "  cache       - Clear cache files"
            echo "  permissions - Fix directory permissions"
            echo "  config      - Reset configuration"
            echo "  all         - Run all fixes"
            return 1
    end
end
